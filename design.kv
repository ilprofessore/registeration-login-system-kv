<FlatButton@ButtonBehavior+Label>:

<ScreenOne>:
    on_enter: root.global_declaration()
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'dream.jpg'
    FloatLayout:
        pos: 0, 0
        size: root.width, root.height
        FlatButton:
            text: 'Code of __ilprofessore'
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.85}
            font_size: 50
            color: 1, 0, 0, 1
            bold: True
            background_color: 0.8, 0.8, 0.8, 1
            font_name: 'Roboto-Italic'
            on_release:
                root.click_sound
                root.switch_screen("'screen4'")
        Button:
            text: 'Log In'
            size_hint: 0.7, 0.2
            pos_hint: {'x': 0.15, 'y': 0.5}
            color: 1, 0, 0.5, 1
            font_size: 36
            bold: True
            font_name: 'Roboto-Italic'
            on_release:
                root.click_sound
                root.switch_screen("'screen2'")
        Button:
            text: 'Sign Up'
            size_hint: 0.7, 0.2
            pos_hint: {'x': 0.15, 'y': 0.2}
            color: 1, 0, 0.5, 1
            font_size: 36
            bold: True
            font_name: 'Roboto-Italic'
            on_release:
                root.click_sound
                root.switch_screen("'screen3'")
        Button:
            text: 'exit'
            size_hint: 0.5, 0.1
            pos_hint: {'x': 0.25, 'y': 0.05}
            font_size: 25
            color: 0, 0, 1, 1
            bold: True
            font_name: 'Roboto-Italic'
            on_release:
                root.on_exit()
<ScreenTwo>:
    on_enter: root.clear_fields()
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'dream.jpg'
    FloatLayout:
        pos: 0, 0
        size: root.width, root.height
        TextInput:
            id: login_username
            multiline: False
            font_name: 'Roboto-Italic'
            hint_text: "enter your username here"
            size_hint: 0.7, 0.08
            pos_hint: {'x': 0.15, 'y': 0.8}
            font_size: 25
            write_tab: False
            password: True
        TextInput:
            id: login_password
            multiline: False
            font_name: 'Roboto-Italic'
            hint_text: "enter pin (only numbers)"
            size_hint: 0.7, 0.08
            pos_hint: {'x': 0.15, 'y': 0.6}
            font_size: 25
            password: True
            write_tab: False
        Button:
            text: 'Log In'
            size_hint: 0.7, 0.2
            pos_hint: {'x': 0.15, 'y': 0.2}
            color: 1, 0, 0, 1
            font_size: 36
            bold: True
            font_name: 'Roboto-Italic'
            on_release:
                root.click_sound
                root.login_submit()
                root.switch_screen("'screen6'")
        Button:
            text: 'back'
            size_hint: 0.5, 0.1
            pos_hint: {'x': 0.25, 'y': 0.05}
            font_size: 25
            color: 0, 0, 1, 1
            bold: True
            font_name: 'Roboto-Italic'
            on_release:
                root.click_sound
                root.switch_screen("'screen1'")
